<Window x:Class="_06._10hm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06._10hm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textBox" Width="auto" Height="25" Margin="10" VerticalAlignment="Top" TextChanged="textBox_TextChanged"/>
            <TextBlock x:Name="textBlock" Margin="10" FontSize="20" Text="{Binding ElementName=slider, Path=Value}"/>
            <Slider x:Name="slider" Margin="10" Value="0" Maximum="0"/>
        </StackPanel>
    </Grid>
</Window>
